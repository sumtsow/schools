<?php

$title = $this->translate('Edit school');
$this->headTitle($title);
?>
<h1><?= $this->escapeHtml($title); ?></h1>

<?php
$form = $this->form;
$formLabel = $this->plugin('formLabel');
$form->setAttribute('action', $this->url(
    'admin',
    array(
        'action' => 'edit',
        'id'     => $this->id,
    )
));
$inputs = [
    'name_uk' => $form->get('name_uk')->setLabel($this->translate('Name', null, 'uk').' (uk)'),
    'name_en' => $form->get('name_en')->setLabel($this->translate('Name', null, 'en').' (en)'),
    'name_ru' => $form->get('name_ru')->setLabel($this->translate('Name', null, 'ru').' (ru)'),
    'shortname' => $form->get('shortname')->setLabel('Short Name'),
    'address' => $form->get('address')->setLabel('Address'),
    'phone' => $form->get('phone')->setLabel('Phone'),
    'email' => $form->get('email'),
    'http' => $form->get('http'),
    'info' => $form->get('info')->setLabel('Information'),
    'area' => $form->get('area')->setLabel('Area'),
    'high' => $form->get('high')->setLabel('Is an University'),
    'map' => $form->get('map')->setLabel('Map'),
    'logo' => $form->get('logo')->setLabel('Logo'),
    'visible' => $form->get('visible')->setLabel('Visible'),
];
$program = $form->get('program')->setLabel($this->translate('Education Program'));
$form->prepare(); ?>
<?= $this->form()->openTag($form); ?>
<?= $this->formHidden($form->get('id'));?>

<div class="form-group">
<?= $this->formLabel($program); ?>	
<?= $this->formElement($program->setAttribute('class', 'custom-select')->setAttribute('size', $program->getOption('length'))->setAttribute('multiple', 'multiple'));?>
<?= $this->formElementErrors($program); ?>
</div>
<?php foreach($inputs as $input) : ?>
<div class="form-group">
    <?= $this->formLabel($input) ?>
    <?php if($input->getAttribute('type') != 'checkbox') : ?>
    <?= $this->formElement($input->setAttribute('class', 'form-control')) ?>
    <?php else : ?>
    <?= $this->formElement($input->setAttribute('class', 'form-check')) ?>
    <?php endif; ?>
    <?= $this->formElementErrors()->render($input, ['class' => 'help-block']) ?>
</div>
<?php endforeach; ?>
<?= $this->formSubmit($form->get('submit')->setAttribute('class', 'btn btn-primary my-3'));?>
<?= $this->form()->closeTag(); 
